<% provide(:title, @user.name) %>

<div class="row">
    <aside class="span4">
    <section>
    <h1>
        <%= gravatar_for @user, size: 52 %>
        <%= @user.name %>
    </h1>
    </section>
    <section>
    <%= render 'shared/stats' %>
    </section>
    </aside>
    <div class="span8">
        <% if signed_in? %>
            <%= render 'follow_form' %>
        <% end %>
        <% if @microposts.any? %>
            <h3>Microposts(<%= @microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>

            <%= will_paginate @microposts %>
        <% end %>
    </div>
</div>
