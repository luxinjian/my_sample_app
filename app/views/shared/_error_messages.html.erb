<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-error">
            The form contains <%= pluralize(object.errors.count, "error") %>
            <ul>
                <% object.errors.full_messages.each do |err| %>
                    <li>* <%= err %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>

